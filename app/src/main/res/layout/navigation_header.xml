<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_account_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_account_header_height"
    android:focusable="true" >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/navigationHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/navigationHeaderProfilePicture"
        android:layout_width="@dimen/navigation_account_header_selected"
        android:layout_height="@dimen/navigation_account_header_selected"
        android:layout_marginStart="@dimen/navigation_vertical_padding"
        android:layout_marginTop="@dimen/navigation_account_header_horizontal_top"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navigationHeaderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navigation_vertical_padding"
        android:layout_marginStart="@dimen/navigation_vertical_padding"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_account_header_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationHeaderProfilePicture"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/navigationHeaderEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navigation_padding"
        android:layout_marginStart="@dimen/navigation_vertical_padding"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_account_header_subtext"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationHeaderName" />

</androidx.constraintlayout.widget.ConstraintLayout>