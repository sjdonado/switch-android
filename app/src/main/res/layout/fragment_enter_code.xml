<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EnterCodeFragment">

    <RelativeLayout
        android:id="@+id/enterCodeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/enterCodeTextViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/fragment_enter_code_txt_view_message"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent" />

        <EditText
            android:id="@+id/enterCodeEditTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterCodeTextViewQuestion"
            android:layout_marginTop="20dp"
            android:digits="0123456789"
            android:drawablePadding="10dp"
            android:hint="@string/fragment_enter_code_edit_txt_code"
            android:inputType="phone"
            android:maxLength="10" />

        <Button
            android:id="@+id/enterCodeButtonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterCodeEditTextCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/fragment_enter_code_btn_continue"
            android:textAllCaps="false"
            android:textColor="#cdd8f1" />

        <ProgressBar
            android:id="@+id/enterCodeProgressbarLoading"
            android:layout_below="@id/enterCodeButtonContinue"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </RelativeLayout>

</FrameLayout>