<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlaceFragment">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/placeImagesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignBounds"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/placeCoverImageView"
                    android:layout_width="@dimen/grid_layout_images"
                    android:layout_height="@dimen/grid_layout_images"
                    android:layout_columnWeight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/placeFirstImageView"
                    android:layout_width="@dimen/grid_layout_images"
                    android:layout_height="@dimen/grid_layout_images"
                    android:layout_columnWeight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/placeSecondImageView"
                    android:layout_width="@dimen/grid_layout_images"
                    android:layout_height="@dimen/grid_layout_images"
                    android:layout_columnWeight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/placeThirdImageView"
                    android:layout_width="@dimen/grid_layout_images"
                    android:layout_height="@dimen/grid_layout_images"
                    android:layout_columnWeight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </GridLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/placeRemoveCoverButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.404"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:icon="@drawable/ic_close_white_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/placeRemoveFirstButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:icon="@drawable/ic_close_white_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/placeRemoveSecondButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.404"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:icon="@drawable/ic_close_white_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/placeRemoveThirdButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                app:iconTint="@color/white_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:icon="@drawable/ic_close_white_24dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/placeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeImagesLayout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/placeLocationTextView"
                android:layout_width="200dp"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeNameTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/placePhoneTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeLocationTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/placeDistanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placePhoneTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>